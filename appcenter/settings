[keycloak-extensions/handler/keycloak/admin-user]
Type = String
Required = True
Show = Install
ShowReadOnly = Settings
InitialValue = admin
Scope = outside
Description = Name of a Keycloak admin user to retrieve events
Description[de] = Name eines Keycloak administrativen Nutzers um Ereignisse abzufragen
Group = Administration
Group[de] = Administration


[keycloak-extensions/handler/keycloak/realm]
Type = String
Required = True
Show = Install
ShowReadOnly = Settings
InitialValue = ucs
Scope = outside
Description = Name of the realm to retrieve events from
Description[de] = Name des Realms um Ereignisse abzufragen
Group = Administration
Group[de] = Administration

[keycloak-extensions/handler/keycloak/admin-auth-url]
Type = String
Required = True
Show = Install
ShowReadOnly = Settings
InitialValue = admin
Scope = outside
Description = Admin authentication URL for the target keycloaks (usually https://server/admin)
Description[de] = URL zur Authentifizierung eines administrativen Nutzers gegenüber der Ziel-Keycloak Instanz (gewöhnlich https://server/admin)
Group = Administration
Group[de] = Administration

